{
    "name": "hrabosh/pdf-invoice",
    "description": "Library to generate PDF invoices",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "support": {
        "source": "https://github.com/hrabosh/pdf-invoice"
    },
    "authors": [
        {
            "name": "Jan Hrabovsky",
            "homepage": "https://github.com/hrabosh"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "setasign/fpdf": "~1.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "8 - 9"
    },
    "autoload": {
        "psr-4": { "Konekt\\PdfInvoice\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Konekt\\PdfInvoice\\Tests\\": "tests/"
        }
    }
}
